@inject NavigationManager Navigation

<style>
    
    .button {
  transition-duration: 0.4s;
  background-color: #4CAF50;
  border: none;
  color: white;
  padding: 15px 32px;
  text-align: center;
  text-decoration: none;
  display: inline-block;
  font-size: 16px;
  margin: 4px 2px;
  cursor: pointer;
  opacity: 1

}</style>

<div style="text-align: center;">
    <button id="newentry" @onclick="NavigateToPage" class="button">@NameOfButton</button>
</div>

@code {
    [Parameter]
    public string PageToNavigate { get; set; } 
    [Parameter]
    public string NameOfButton { get; set; }

    public void NavigateToPage()
    {
        Navigation.NavigateTo(PageToNavigate);
    }
}
