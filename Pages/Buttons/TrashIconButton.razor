@*
    Button component used to display a trash icon as a button
*@

<style>
    .trashbutton {
        background-image: url("https://img.icons8.com/ios/50/000000/trash.png");
        width:22px;
        height:22px;
        background-size:cover;
    }
</style>

<button class="trashbutton" @onclick="OnClickCallback"></button>

@code
{
    [Parameter]
    public EventCallback OnClickCallback { get; set; }
}